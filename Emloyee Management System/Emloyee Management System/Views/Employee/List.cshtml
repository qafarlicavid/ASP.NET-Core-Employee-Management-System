@model List<ListViewModel>


<div class="container pt-5">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Employee Code</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">FatherName</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var employee in Model)
            {
                @if (employee.IsDeleted == false)
                {
                    <tr>
                        <th scope="row">@employee.EmployeeCode</th>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.FatherName</td>
                        <td class="d-flex justify-content-between">
                            <a asp-route="employee-update" asp-route-empcode="@employee.EmployeeCode" class="col-3 btn btn-secondary">Update</a>
                            <a asp-route="employee-delete" asp-route-empcode="@employee.EmployeeCode" class="col-3 btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="employee-add" target="_blank" class="btn btn-secondary mt-5">Add Employee</a>
        </div>
    </div>
</div>
